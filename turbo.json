{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**"]
    },
    "check": {
      "dependsOn": ["^check"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "test": {
      "cache": false,
      "env": ["DISABLE_BROWSER_TESTS"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
