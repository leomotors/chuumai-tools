{
  "name": "@repo/database",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "tsc",
    "lint": "eslint src *.ts",
    "format": "eslint src *.ts --fix",
    "chuni:generate": "dotenv -- drizzle-kit --config drizzle.chuni.ts generate",
    "chuni:migrate": "dotenv -- drizzle-kit --config drizzle.chuni.ts migrate",
