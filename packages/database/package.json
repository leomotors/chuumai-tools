    "./maimai": "./src/maimai/index.ts"
  },
  "dependencies": {
    "@repo/types": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8"
  }
}
